%h1 新規チケット

= form_for @ticket, url: tickets_path(project_id: @project.id) do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, size: 100
  .field
    = f.label :content
    %br
    = f.text_area :content, rows: 10, cols: 100
  .field
    = f.label :status
    = f.radio_button :status , "current", checked: true
    = f.label :status_current, " current"
    = f.radio_button :status , "backlog"
    = f.label :status_backlog, " backlog"
  .actions
    = f.submit '作成'


= link_to '一覧', tickets_path(project_id: @project.id)
